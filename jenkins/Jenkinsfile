pipeline {
    agent any
    tools {
        // Install the Maven version configured as "maven3" and add it to the path.
        maven "maven3"
    }
    parameters {
        string(name: 'Branch', defaultValue: 'dev', description: 'DefaultBranch')
        booleanParam(name: 'isTest', defaultValue: true, description: 'enable or disable test')
        choice(name: 'ENV', choices: ['DEV', 'TEST', 'PROD'], description: 'Pick ENV. 1st array is default in choice array')
    }

    stages {
        stage('Build') {
            steps {
                sh "echo ${params.Branch}"
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            when {
                ${params.isTest}
            }
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            when {
                ${params.ENV}=='PROD' 
            }
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
